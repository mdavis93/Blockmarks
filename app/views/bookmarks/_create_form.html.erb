<%= form_for bookmark, remote: true, :html => { :role => "form", :class => "bookmark_form" } do |f| %>
  <div id="error_explanation" class="bg-danger text-danger">
    <% if bookmark.errors.any? %>
      <h4><%= pluralize(bookmark.errors.count, "error") %>.</h4>
      <ul>
        <% bookmark.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="row">
    <div class="col-sm-12">

      <div class="form-group">
        <%= f.label "Bookmark URL" %>
        <%= f.text_field :url, class: "form-control first_input" %>
      </div>
    </div>

    <div class="col-sm-12">
      <div class="form-group">
        <%= f.submit bookmark.new_record? ? "Add Bookmark" : "Save Changes", class: "btn btn-primary" %>
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
<% end %>
