<%= form_for topic do |f| %>
  <% if topic.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(topic.errors.count, "error") %></h4>
      <ul>
        <% post.error.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_group_tag(topic.errors[:title]) do %>
    <%= f.label "Topic Name" %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Name your Topic" %>
  <% end %>

  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
